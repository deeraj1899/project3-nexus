    <style>
  * {
    padding: 0px;
    margin: 0px;
}

#navbar{
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: sticky;
    top: 0px;
}

#navbar::before{
    content: "";
    background-color: black;
    position: absolute;
    top:0px;
    left:0px;
    height: 100%;
    width:100%;
    z-index: -1;
}
#logo{
    margin: 10px 34px;
}

#logo img{
    height: 59px;
    margin: 3px 6px;
    background: white;
}
#navbar ul{
    display: flex;
    font-family: 'Baloo Bhai', cursive;
}

#navbar ul li{ 
    list-style: none;
    font-size: 1.3rem;
}

#navbar ul li a{
    color: white;
    padding: 3px 22px;
    border-radius: 20px;
    text-decoration: none;
}

#navbar ul li a:hover{
    color: black;
    background-color: white;
}
#navbar .btn {
    margin-left: auto; 
    padding: 15px 20px;
    margin-right: 15px;
    background-color: black;
    color: white;
    font-size: 15px;
    font-weight: bold;
    cursor: pointer;
    text-decoration: none;
}
#navbar .btn:hover
{
    letter-spacing: 0.1rem;
    color: black;
    background-color: #fff;
}

#home {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 50px;
    background: url('img/home.jpg') no-repeat center center/cover;
    height: 550px;
    text-align: center;
    color: white;
    position: relative;
    z-index: 998;
}

#home::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: -1;
}

#home h1 {
    font-family: 'Baloo Bhai', cursive;
    font-weight: bold;
    font-size: 2.5rem;
    margin-bottom: 20px;
}

#home p {
    font-family: 'Bree Serif', serif;
    font-size: 1.5rem;
    line-height: 1.6;
}

.h-primary {
    font-family: 'Bree Serif', serif;
    font-size: 3.8rem;
    padding: 12px;
}

#services-container {
    margin: 20px;
    padding: 20px;
    text-align: center;
}

#services {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 20px;
}

#services .box {
    width: calc(33.33% - 40px);
    border: 2px solid brown;
    padding: 20px;
    margin: 20px;
    border-radius: 28px;
    background: #f2f2f2;
    text-align: center;
}

#services .box img {
    height: 160px;
    margin-bottom: 10px;
}

#services .box h2 {
    font-family: 'Bree Serif', serif;
    font-size: 1.8rem;
    margin-bottom: 10px;
}

#services .box p {
    font-family: 'Bree Serif', serif;
    font-size: 1.2rem;
    line-height: 1.6;
}

.h-secondary {
    font-family: 'Bree Serif', serif;
    font-size: 2.3rem;
    padding: 12px;
}

.center {
    text-align: center;
}

#about-us {
    padding: 50px 20px;
    background: #fef7e6;
    text-align: center;
}

#about-us h1 {
    font-family: 'Bree Serif', serif;
    font-size: 3.5rem;
    margin-bottom: 20px;
}

#about-us p {
    font-family: 'Bree Serif', serif;
    font-size: 1.2rem;
    line-height: 1.8;
    color: #333;
    max-width: 800px;
    margin: 0 auto;
}

#contact-us {
    padding: 50px 20px;
    background: white;
    text-align: center;
}

#contact-us h1 {
    font-family: 'Bree Serif', serif;
    font-size: 3.5rem;
    margin-bottom: 20px;
}

.contact-info {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.contact-info div {
    margin-bottom: 15px;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
}

.contact-info i {
    margin-right: 10px;
    color: brown;
    font-size: 1.5rem;
}

footer {
    background-color: black;
    color: white;
    text-align: center;
    padding: 10px 0;
    font-family: 'Bree Serif', serif;
}

footer a {
    color: white;
    text-decoration: none;
}

footer a:hover {
    color: brown;
}

.social-media {
    margin-bottom: 20px;
    text-align: center;
}

.social-media a {
    display: inline-block;
    margin: 0 10px;
    color: #555;
    font-size: 24px;
}

.social-media a:hover {
    color: #007bff;
}

.additional-links {
    margin-bottom: 20px;
    text-align: center;
}

.additional-links a {
    display: inline-block;
    margin: 0 10px;
    color: #555;
    text-decoration: none;
}

.additional-links a:hover {
    color: #007bff;
}

#information {
    padding: 50px 20px;
    background: #fef7e6;
    text-align: center;
}

#infoModal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.4);
    padding-top: 60px;
}

#infoModal .modal-content {
    background-color: #fefefe;
    margin: 5% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 600px;
    border-radius: 10px;
}

#infoModal .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

#infoModal .close:hover,
#infoModal .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

#infoModal form {
    display: flex;
    flex-direction: column;
}

#infoModal input {
    margin-bottom: 20px;
    margin-top: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

#infoModal button {
    padding: 10px;
    background-color: brown;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
}

#infoModal button:hover {
    background-color: darkred;
}

#infoBtn {
    padding: 10px;
    border-radius: 10px;
    outline: none;
    border: 1px solid black;
    cursor: pointer;
}

#feedback {
    padding: 50px 20px;
    text-align: center;
}

#feedback h1 {
    font-family: 'Bree Serif', serif;
    font-size: 3.5rem;
    margin-bottom: 20px;
}

#feedback form {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}

#feedback input,
#feedback textarea {
    margin: 10px 0;
    padding: 10px;
    width: calc(100% - 20px);
    border: 1px solid #ccc;
    border-radius: 5px;
    font-family: 'Bree Serif', serif;
}

#feedback textarea {
    height: 150px;
    resize: vertical;
}

#feedback button {
    margin-top: 10px;
    padding: 10px 20px;
    background-color: brown;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1.2rem;
    font-family: 'Bree Serif', serif;
    transition: background-color 0.3s, transform 0.3s;
}

#feedback button:hover {
    background-color: darkred;
    transform: scale(1.05);
}

.hamburger, .close-icon {
    display: none;
    cursor: pointer;
}

.hamburger .fa-bars, .close-icon .fa-times {
    color: white;
    font-size: 24px;
}

#navbar ul ul {
    display: none;
    position: absolute;
    background-color: black;
    opacity: 0.7;
    width: 100%;
    z-index: 999;
    text-align: center;
}

#navbar ul ul.show {
    display: flex;
    flex-direction: column;
    z-index: 1000;
}

@media (max-width: 630px) {
    #navbar ul {
        display: none;
        flex-direction: column;
        width: 100%;
        padding: 0;
        position: absolute;
        top: 60px;
        left: 0;
        background-color: black;
        opacity: 0.7;
        z-index: 1000;
    }

    #navbar ul.show {
        display: flex;
    }

    #navbar ul li {
        width: 100%;
        text-align: center;
        padding: 10px 0;
        margin: 0;
    }

    #navbar ul li a {
        padding: 15px 0;
    }

    #navbar .fa-bars {
        display: block;
        color: white;
        font-size: 24px;
        cursor: pointer;
        margin-right: 20px;
    }

    #navbar .fa-bars:hover {
        color: #ccc;
    }

    .hamburger {
        display: block;
    }

    .close-icon {
        display: none;
    }

    .hamburger.hide {
        display: none;
    }

    .close-icon.show {
        display: block;
    }

    #home {
        padding: 60px 20px;
    }

    #home h1 {
        font-size: 2rem;
    }

    #home p {
        font-size: 1.2rem;
    }

    #services {
        flex-direction: column;
        margin: 0;
        padding: 0;
        gap: 30px;
    }

    #services .box {
        margin: 0;
        padding: 15px;
        width: auto;
    }

    #about-us h1 {
        font-size: 2.5rem;
    }

    #about-us p {
        font-size: 1rem;
        padding: 0 10px;
    }

    #contact-us h1 {
        font-size: 2.5rem;
    }

    .contact-info div {
        font-size: 1rem;
    }

    #infoModal .modal-content {
        width: 90%;
    }

    #infoModal input {
        width: 100%;
        max-width: 100%;
    }

    #feedback form {
        padding: 0 20px;
    }

    #feedback input,
    #feedback textarea {
        margin: 8px 0;
    }

    .social-media,
    .additional-links {
        margin-bottom: 15px;
    }

    .social-media a,
    .additional-links a {
        margin: 0 8px;
        font-size: 20px;
    }
}

@media (min-width: 630px) and (max-width: 790px) {
    #navbar {
        padding: 10px 15px;
    }

    #navbar ul li {
        margin-left: 10px;
    }

    #navbar ul li a {
        padding: 3px 10px;
        font-size: 1rem;
    }

    #navbar .btn {
        padding: 10px 15px;
        font-size: 14px;
    }

    #home {
        padding: 80px 40px;
        height: auto;
    }

    #home h1 {
        font-size: 2.5rem;
    }

    #home p {
        font-size: 1.3rem;
    }

    #services {
        flex-wrap: wrap;
        justify-content: center;
        gap: 40px;
    }

    #services .box {
        flex-basis: calc(50% - 110px);
        margin: 2px;
    }

    #about-us {
        padding: 50px 40px;
    }

    #about-us h1 {
        font-size: 3rem;
    }

    #about-us p {
        font-size: 1.1rem;
    }

    #contact-us {
        padding: 50px 40px;
    }

    #contact-us h1 {
        font-size: 3rem;
    }

    .contact-info div {
        font-size: 1.1rem;
    }

    #infoModal .modal-content {
        width: 70%;
    }

    #feedback form {
        padding: 0 30px;
    }

    .social-media,
    .additional-links {
        margin-bottom: 15px;
    }

    .social-media a,
    .additional-links a {
        margin: 0 10px;
    }
}



    </style>
